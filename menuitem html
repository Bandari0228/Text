<div class="menu-item" (click)="toggle(menuItem, menuList)">
  <span>{{ menuItem.title }}</span>
  <span *ngIf="menuItem.isSub" class="arrow">></span>
</div>

<div *ngIf="menuItem.isSub && menuItem.isOpen">
  <app-menu-item *ngFor="let subMenu of menuItem.children || []" 
                 [menuItem]="subMenu" 
                 [menuList]="menuItem.children || []">
  </app-menu-item>
</div>
